{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules",
    "client.d.ts",
    "dist",
    "scripts"
  ]
}