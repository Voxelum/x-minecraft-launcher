{
    "type": "object",
    "properties": {
        "version": {
            "description": "The metadata file format\n\nNow is 0",
            "type": "number",
            "const": 0
        },
        "exportDirectory": {
            "description": "The export directory for modpack files. Need to be an absolute path.\n\nIf this is absent, it will export to the user desktop.",
            "default": "",
            "type": "string"
        },
        "modpackVersion": {
            "description": "The current modpack version. Start from 0.0.1",
            "default": "0.0.1",
            "type": "string"
        },
        "emitCurseforge": {
            "description": "Emit the curseforge modpack format",
            "default": true,
            "type": "boolean"
        },
        "emitModrinth": {
            "description": "Emit the modrinth modpack format",
            "default": true,
            "type": "boolean"
        },
        "emitModrinthStrict": {
            "description": "Emit the modrinth modpack format with strict version",
            "default": true,
            "type": "boolean"
        },
        "emitOffline": {
            "description": "Emit the offline format zip",
            "default": false,
            "type": "boolean"
        },
        "emittedFiles": {
            "description": "The files to included in last export.",
            "default": [],
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "emitCurseforge",
        "emitModrinth",
        "emitModrinthStrict",
        "emitOffline",
        "emittedFiles",
        "exportDirectory",
        "modpackVersion",
        "version"
    ],
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false
}