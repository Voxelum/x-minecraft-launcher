{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./main/*"
      ],
      "~/*": [
        "../xmcl-runtime/*"
      ]
    },
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "types": [
      "@xmcl/runtime/global",
      "@xmcl/runtime/global.module",
      "esbuild-plugin-yaml/dist/yaml"
    ]
  },
  "include": [
    "./*.ts",
    "build",
    "main",
    "plugins"
  ],
  "exclude": [
    "node_modules",
    "../xmcl-runtime"
  ]
}