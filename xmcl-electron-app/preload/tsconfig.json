{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "types": [
      "@xmcl/runtime/global",
      "esbuild-plugin-yaml/dist/yaml"
    ]
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "../../xmcl-runtime/**/*"
  ]
}