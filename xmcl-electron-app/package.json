{
    "name": "xmcl",
    "private": true,
    "main": "./dist/index.js",
    "version": "0.17.2",
    "author": "ci010 <cijhn@hotmail.com>",
    "description": "A great minecraft launcher in the future",
    "license": "MIT",
    "engines": {
        "node": ">=15.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/voxelum/x-minecraft-launcher"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=development esbuild build.ts --bundle --platform=node --external:electron --external:electron-builder --external:esbuild --format=cjs | node",
        "build:all": "cross-env BUILD_TARGET=production npm run build",
        "build:dir": "cross-env BUILD_TARGET=dir npm run build",
        "check": "tsc --noEmit --project tsconfig.json",
        "dev": "cross-env NODE_ENV=development esbuild dev.ts --bundle --platform=node --external:electron --external:esbuild --format=cjs | node",
        "lint": "eslint --ext .ts .",
        "lint:fix": "npm run lint -- --fix"
    },
    "dependencies": {
        "7zip-bin": "^5.1.1",
        "7zip-min": "^1.3.2"
    },
    "devDependencies": {
        "@types/7zip-min": "^1.3.1",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/fs-extra": "^8.1.2",
        "@types/lodash.debounce": "^4.0.6",
        "@types/lodash.throttle": "^4.1.6",
        "@types/node": "~14",
        "@types/node-powershell": "^4.0.1",
        "@types/uuid": "^3.4.10",
        "@types/yauzl": "^2.9.2",
        "@types/yazl": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "@vue/devtools": "^5.3.4",
        "@vue/runtime-dom": "latest",
        "@xmcl/core": "workspace:*",
        "@xmcl/installer": "workspace:*",
        "@xmcl/runtime": "workspace:*",
        "@xmcl/runtime-api": "workspace:*",
        "@xmcl/task": "workspace:*",
        "builtin-modules": "^3.2.0",
        "chalk": "^4.1.2",
        "cross-env": "^5.2.1",
        "electron": "^15.0.2",
        "electron-builder": "^22.14.5",
        "electron-devtools-installer": "^3.2.0",
        "electron-updater": "^4.3.9",
        "esbuild": "^0.12.25",
        "eslint": "~7",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "file-type": "^16.5.3",
        "filenamify": "^4.3.0",
        "fs-extra": "^10.0.0",
        "got": "^11.8.2",
        "lodash.debounce": "^4.0.8",
        "lodash.throttle": "^4.1.1",
        "node-powershell": "^4.0.0",
        "original-fs": "^1.1.0",
        "semver": "^7.3.5",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3",
        "uuid": "^7.0.3"
    }
}