{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@shared/*": [
        "../xmcl-runtime-api/src/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite-plugin-pwa/client",
      "@xmcl/runtime-api/client",
      "@xmcl/runtime-api/loggerClient",
    ]
  },
  "vueCompilerOptions": {
    "experimentalCompatMode": 2
  },
  "exclude": [
    "node_modules"
  ]
}