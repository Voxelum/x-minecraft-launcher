{
    "name": "x-minecraft-launcher",
    "private": true,
    "version": "0.14.0",
    "author": "ci010 <cijhn@hotmail.com>",
    "description": "A great minecraft launcher in the future",
    "license": "MIT",
    "engines": {
        "node": ">=15.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/voxelum/x-minecraft-launcher"
    },
    "scripts": {
        "build": "pnpm run --prefix=xmcl-electron-app build",
        "build:production": "pnpm run --prefix=xmcl-electron-app build:production",
        "build:dir": "pnpm run --prefix=xmcl-electron-app build:dir",
        "build:main": "pnpm run --prefix=xmcl-electron-app build",
        "build:renderer": "pnpm run --prefix=xmcl-keystone-ui build",
        "check": "vue-tsc --noEmit --project src/renderer/tsconfig.json",
        "dev:main": "pnpm run --prefix=xmcl-electron-app dev",
        "dev:renderer": "pnpm run --prefix=xmcl-keystone-ui dev",
        "lint": "eslint --ext .ts,.vue src",
        "lint:fix": "eslint --ext .ts,.vue --fix src"
    }
}
