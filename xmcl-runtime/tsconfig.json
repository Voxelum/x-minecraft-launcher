{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "importHelpers": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "/@main/*": [
        "lib/*"
      ],
      "/@shared/*": [
        "../xmcl-runtime-api/src/*"
      ]
    },
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}