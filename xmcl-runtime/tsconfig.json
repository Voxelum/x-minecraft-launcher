{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "importHelpers": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext", "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    },
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}